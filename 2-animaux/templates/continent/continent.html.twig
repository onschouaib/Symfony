{% extends 'base.html.twig' %}

{% block title %}Page d√©tail continent{% endblock %}

{% block monTitre %}Continent {{ continent.libelle }}{% endblock %}
{% block body %}
{% for animal in continent.animaux %}
<div class="row align-items-center">
    <div class="col-2 text-center">
        <img src="{{asset('images/' ~ animal.image)}}">
    </div>
    <div class="col-auto">
        <h2>
        <a href="{{path('afficher_animal',{'id': animal.id})}}">{{animal.nom}}</a> 
        </h2>
        <div>
            {{animal.description}}
        </div>
        <div>
            <a href="{{path('afficher_famille', {'id':animal.famille.id})}}" class="btn btn-primary">{{animal.famille.libelle}}</a>
        </div>
        <div>                    
            {% for continentAnimal in animal.continents %}
                {% if continentAnimal.id != continent.id %}
                    <a href="{{path('continent', {id : continentAnimal.id})}}" class="btn btn-warning">{{continentAnimal.libelle}}</a>
                {% endif %}
            {% endfor %}
        </div> 
        
    </div>
</div>

{% endfor %}
{% endblock %}



   