{% extends 'base.html.twig' %}

{% block title %}Page d√©tail personne{% endblock %}

{% block monTitre %}Personne {{ personne.nom }}{% endblock %}
{% block body %}
{% for dispose in personne.disposes %}
        <div class="row align-items-center">
            <div class="col-12 col-md-6 col-lg-2 text-center">
                <img src="{{asset('images/' ~ dispose.animal.image)}}" class="img-fluid">
            </div>
            <div class="col text-center">
                <h2><a href="{{path('afficher_animal',{'id': dispose.animal.id})}}">{{dispose.animal.nom}}</a></h2>
                <div><b>Nombre : </b>{{dispose.nb}}</div>            
            </div>
        </div>
    {% endfor %}
{% endblock %}



   