{% extends 'base.html.twig' %}

{% block title %}Personnes{% endblock %}

{% block monTitre %}Page listant les personnes{% endblock %}
{% block body %}
{% for personne in personnes %}
        <h2 class="border-bottom border-primary">
            <a href="{{path('afficherPersonne', {id : personne.id})}}">{{personne.nom}}</a>                          
        </h2>

        {% for dispose in personne.disposes %}
            <div class="row align-items-center">
                <div class="col-12 col-md-6 col-lg-2 text-center">
                    <img src="{{asset('images/' ~ dispose.animal.image)}}" class="img-fluid">
                </div>
                <div class="col text-center">
                    <h2><a href="{{path('afficher_animal',{'id': dispose.animal.id})}}">{{dispose.animal.nom}}</a></h2>
                    <div>{{dispose.animal.description}}</div>
                    <div><a href="{{path('afficher_famille',{'id': dispose.animal.famille.id})}}" class="btn btn-primary">{{dispose.animal.famille.libelle}}</a></div>            
                </div>
            </div>
        {% endfor %}

    {% endfor %}
{% endblock %}
